<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="float-left">Add a new section</h1>
  <h4 class="float-right"><%= link_to current_course.title, instructor_course_path(current_course) %></h4>
  <br class="clr" />
  <%= simple_form_for @section, url: instructor_course_sections_path(current_course) do |f| %>
    <%= f.input :title %>
    <br />
    <%= f.submit 'Add Section', class: 'btn btn-primary' %>
    <br />
  <% end %>
</div>