<br />
<div class="booyah-box col-10 offset-1">
  <h1>Edit lesson</h1>
  <%= simple_form_for @lesson, url:instructor_lesson_path(@lesson) do |f| %>
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :video %>
    <br />
    <%= f.submit 'Update', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', :back, class: 'btn btn-secondary' %>
    <br />
    <br />
  <% end %>
</div>